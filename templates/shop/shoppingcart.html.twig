{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>ShoppingCart</h1>


        <table width="100%">
            <tr>
                <th>Produkt</th>
                <th>Preis</th>
                <th>Anzahl</th>
                <th>Gesamt</th>
                <th></th>

            </tr>

            {% for item in shoppingcart %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.price * item.quantity }}</td>
                        
                    <td><a href="{{ path('app_shop_shoppingcart_increase', {'id': item.id}) }}">+</a></td>
                    <td><a href="{{ path('app_shop_shoppingcart_decrease', {'id': item.id}) }}">-</a></td>
                    <td><a href="{{ path('app_shop_shoppingcart_remove', {'id': item.id}) }}">X</a></td>

                </tr>
            {% endfor %}
        </table>
        <br>

        <a href="{{ path('app_shop_deliveryaddress') }}">Zur Adresseingabe</a>

</div>
{% endblock %}
